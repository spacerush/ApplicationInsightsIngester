@model Collector.Models.ViewModels.Requests.RequestsDailyViewModel

@{
    ViewData["Title"] = "Index";
}

<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#requestPayloadsTable').DataTable(
            {
                "order": [[0, "desc"]]
            }
        );
    });
</script>

<h1>Index</h1>
<p>This page shows telemetry from the last day. Use the buttons below to look at other data sets.</p>
<a href="@Url.Action("Index", "Requests")" class="btn btn-outline-info">All requests in last hours</a>
<a href="@Url.Action("Weekly", "Requests")" class="btn btn-outline-info">All requests in last week</a>

<table class="table table-striped table-bordered" id="requestPayloadsTable">
    <thead>
        <tr><th>Timestamp</th><th>Url</th><th>Name</th><th>Total Milliseconds</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RequestPayloads.OrderByDescending(o => o.Metadata.Timestamp))
        {
            <tr><td>@item.Metadata.Timestamp</td><td>@item.Url</td><td>@item.Name</td><td>@item.Duration.TotalMilliseconds</td></tr>
        }
    </tbody>
</table>