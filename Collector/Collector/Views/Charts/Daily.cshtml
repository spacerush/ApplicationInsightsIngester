@model Collector.Models.ViewModels.Raw.DailyChartViewModel

@{
    ViewData["Title"] = "Daily chart";
}
<h1>Daily</h1>

<div style="width:75%;height:200px;">
    <canvas id="canvas"></canvas>
</div>
<br>
<script>
	var config = {
		type: 'line',
		data: {
			labels: @Html.Raw(Model.TelemetryLengthLabels),
			datasets: [{
				label: 'Telemetry Data Length (characters)',
				backgroundColor: 'rgb(255, 99, 132)',
				borderColor: 'rgb(255, 99, 132)',
				data: @Html.Raw(Model.TelemetryLengthData),
				fill: false,
			}]
		},
		options: {
			responsive: true,
			title: {
				display: true,
				text: 'Chart.js Line Chart'
			},
			tooltips: {
				mode: 'index',
				intersect: false,
			},
			hover: {
				mode: 'nearest',
				intersect: true
			},
			scales: {
				xAxes: [{
					display: true,
					scaleLabel: {
						display: true,
						labelString: 'X axes label'
					}
				}],
				yAxes: [{
					display: true,
					scaleLabel: {
						display: true,
						labelString: 'Value'
					}
				}]
			}
		}
	};

	window.onload = function() {
		var ctx = document.getElementById('canvas').getContext('2d');
		window.myLine = new Chart(ctx, config);
	};
</script>